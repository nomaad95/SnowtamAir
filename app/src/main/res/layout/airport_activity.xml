<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_dialog_snowtam"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:text="@string/btn_dialog_snowtam"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout_aeroport"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:padding="20dp"
            mapbox:layout_constraintBottom_toTopOf="@+id/linearLayout_piste"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/aeroport_heure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/aeroport_heure" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/aeroport_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/aeroport_date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_piste"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:background="#F5F5F5"
            android:orientation="horizontal"
            mapbox:layout_constraintBottom_toTopOf="@+id/mapView"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toBottomOf="@+id/linearLayout_aeroport">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager_pistes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mapbox:layout_constraintBottom_toTopOf="@+id/linearLayout_piste"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/linearLayout_aeroport">

            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="401dp"
            android:layout_height="326dp"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:mapbox_cameraTargetLat="49.0097"
            mapbox:mapbox_cameraTargetLng="2.5479"
            mapbox:mapbox_cameraTilt="70"
            mapbox:mapbox_cameraZoom="17" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
