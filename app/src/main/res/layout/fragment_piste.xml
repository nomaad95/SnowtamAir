<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PisteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chevron_droite"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:tint="#999C9C9C"
                    app:srcCompat="@drawable/ic_chevron_left_solid" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="#F5F5F5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aeroport_piste_nom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/aeroport_piste_nom"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/aeroport_piste_meteo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/aeroport_piste_meteo"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/aeroport_piste_etat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/aeroport_piste_etat"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/chevron_gauche"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:tint="#999C9C9C"
                    app:srcCompat="@drawable/ic_chevron_right_solid" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>



</FrameLayout>